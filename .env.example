# Discord Bot Token (Required)
TOKEN=your_discord_bot_token_here

# Bot Owners (Comma-separated Discord User IDs)
OWNERS=owner_id_1,owner_id_2

# Bot Default Prefix (Optional, default: !)
PREFIX=!

# Erela.js Configuration (Lavalink)
LAVALINK_HOST=localhost
LAVALINK_PORT=2333
LAVALINK_PASSWORD=your_lavalink_password
LAVALINK_SECURE=false

# Bot Activity (Optional)
ACTIVITY_TYPE=LISTENING  # Can be PLAYING, LISTENING, WATCHING, STREAMING
ACTIVITY_NAME=to music

# Top.gg API Token (Optional, for server count posting)
TOP_GG_TOKEN=

# Database (MongoDB) Configuration (If used)
MONGO_URI=mongodb://localhost:27017/nirvana

# Spotify API (Required for Spotify support)
SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=

# Other API Keys
GENIUS_API_KEY=
YOUTUBE_API_KEY=

# Development Mode (true/false)
DEV_MODE=false

# Logging Level (debug, info, warn, error)
LOG_LEVEL=info
